# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

# Global variables
CONSTRUCTION_NEWS_BUNDLE_ID = "metropolis.co.uk.constructionnews"
NURSING_TIMES_BUNDLE_ID = "metropolis.net.nursingtimes"
CONSTRUCTION_NEWS_PACKAGE = "metropolis.co.uk.constructionnews"
NURSING_TIMES_PACKAGE = "metropolis.net.nursingtimes"

# Helper methods
def ensure_env_vars(required_vars)
  missing_vars = required_vars.select { |var| ENV[var].nil? || ENV[var].empty? }
  unless missing_vars.empty?
    UI.user_error!("Missing required environment variables: #{missing_vars.join(', ')}")
  end
end

def get_brand_name(brand)
  case brand
  when "cn"
    "Construction News"
  when "nt"
    "Nursing Times"
  else
    UI.user_error!("Invalid brand: #{brand}. Must be 'cn' or 'nt'")
  end
end

def get_bundle_id(brand)
  case brand
  when "cn"
    CONSTRUCTION_NEWS_BUNDLE_ID
  when "nt"
    NURSING_TIMES_BUNDLE_ID
  else
    UI.user_error!("Invalid brand: #{brand}. Must be 'cn' or 'nt'")
  end
end

def get_package_name(brand)
  case brand
  when "cn"
    CONSTRUCTION_NEWS_PACKAGE
  when "nt"
    NURSING_TIMES_PACKAGE
  else
    UI.user_error!("Invalid brand: #{brand}. Must be 'cn' or 'nt'")
  end
end

# iOS Platform
platform :ios do
  desc "Upload Construction News to TestFlight"
  lane :upload_cn_testflight do
    upload_to_testflight_for_brand("cn")
  end

  desc "Upload Nursing Times to TestFlight"
  lane :upload_nt_testflight do
    upload_to_testflight_for_brand("nt")
  end

  desc "Upload Construction News to App Store"
  lane :upload_cn_appstore do
    upload_to_appstore_for_brand("cn")
  end

  desc "Upload Nursing Times to App Store"
  lane :upload_nt_appstore do
    upload_to_appstore_for_brand("nt")
  end
  desc "Build and upload Construction News locally to TestFlight"
  lane :build_upload_cn_testflight do
    build_and_upload_locally(brand: "cn")
  end

  desc "Build and upload Nursing Times locally to TestFlight"
  lane :build_upload_nt_testflight do
    build_and_upload_locally(brand: "nt")
  end

  desc "Build and upload Construction News locally to App Store"
  lane :build_upload_cn_appstore do
    build_and_upload_locally(brand: "cn", target: "appstore")
  end

  desc "Build and upload Nursing Times locally to App Store"
  lane :build_upload_nt_appstore do
    build_and_upload_locally(brand: "nt", target: "appstore")
  end

  # Private lane for local build and upload
  private_lane :build_and_upload_locally do |options|
    brand = options[:brand]
    target = options[:target] || "testflight"
    brand_name = get_brand_name(brand)
    bundle_id = get_bundle_id(brand)
    
    UI.message("ðŸš€ Starting local build and #{target} upload for #{brand_name}")
    
    # Ensure required environment variables
    ensure_env_vars([
      "APPLE_ID",
      "APPLE_TEAM_ID"
    ])

    # Set brand for prebuild
    ENV["BRAND"] = brand
    
    # Run prebuild to configure for specific brand
    UI.message("ðŸ”§ Running prebuild for #{brand_name}...")
    sh("cd .. && node scripts/prebuild.js #{brand}")
    
    # Install iOS dependencies
    UI.message("ðŸ“¦ Installing iOS dependencies...")
    sh("cd ../ios && pod install")
    
    # Get certificates and provisioning profiles
    UI.message("ðŸ” Managing certificates and provisioning profiles...")
    
    # Download/create certificates
    cert(
      team_id: ENV["APPLE_TEAM_ID"],
      username: ENV["APPLE_ID"]
    )
    
    # Download/create provisioning profiles
    sigh(
      app_identifier: bundle_id,
      team_id: ENV["APPLE_TEAM_ID"],
      username: ENV["APPLE_ID"],
      force: false # Set to true to regenerate profiles
    )
    
    # Build the app
    UI.message("ðŸ”¨ Building #{brand_name} IPA...")
    
    gym(
      workspace: "../ios/NursingTimes.xcworkspace",
      scheme: "NursingTimes",
      configuration: "Release",
      output_directory: "../build",
      output_name: "#{brand}_app.ipa",
      clean: true,
      include_bitcode: false,
      include_symbols: true,
      export_method: "app-store",
      export_team_id: ENV["APPLE_TEAM_ID"]
    )
    
    # Upload based on target
    if target == "testflight"
      upload_to_testflight_local(brand: brand, bundle_id: bundle_id, brand_name: brand_name)
    else
      upload_to_appstore_local(brand: brand, bundle_id: bundle_id, brand_name: brand_name)
    end
    
    # Clean up
    File.delete("../build/#{brand}_app.ipa") if File.exist?("../build/#{brand}_app.ipa")
  end

  # Private lane for TestFlight upload (local builds)
  private_lane :upload_to_testflight_local do |options|
    brand = options[:brand]
    bundle_id = options[:bundle_id]
    brand_name = options[:brand_name]
    
    UI.message("ðŸ“¤ Uploading #{brand_name} to TestFlight...")
    
    retry_count = 0
    max_retries = 3
    
    begin
      upload_to_testflight(
        ipa: "../build/#{brand}_app.ipa",
        app_identifier: bundle_id,
        skip_waiting_for_build_processing: false,
        skip_submission: true,
        distribute_external: false,
        notify_external_testers: false,
        changelog: "Latest local build for #{brand_name}",
        beta_app_feedback_email: ENV["BETA_FEEDBACK_EMAIL"],
        beta_app_description: "#{brand_name} beta version for internal testing"
      )
      
      UI.success("âœ… Successfully uploaded #{brand_name} to TestFlight!")
      
    rescue => exception
      retry_count += 1
      if retry_count <= max_retries
        UI.important("âš ï¸  Upload failed (attempt #{retry_count}/#{max_retries}): #{exception.message}")
        UI.important("Retrying in 30 seconds...")
        sleep(30)
        retry
      else
        UI.error("âŒ Failed to upload #{brand_name} to TestFlight after #{max_retries} attempts")
        raise exception
      end
    end
  end

  # Private lane for App Store upload (local builds)
  private_lane :upload_to_appstore_local do |options|
    brand = options[:brand]
    bundle_id = options[:bundle_id]
    brand_name = options[:brand_name]
    
    UI.message("ðŸ“¤ Uploading #{brand_name} to App Store...")
    
    upload_to_app_store(
      ipa: "../build/#{brand}_app.ipa",
      app_identifier: bundle_id,
      skip_binary_upload: false,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      automatic_release: false,
      submit_for_review: false
    )

    UI.success("âœ… Successfully uploaded #{brand_name} to App Store!")
  end


  # Private lane for TestFlight upload
  private_lane :upload_to_testflight_for_brand do |options|
    brand = options[:brand] || options[0]
    brand_name = get_brand_name(brand)
    bundle_id = get_bundle_id(brand)
    
    UI.message("ðŸš€ Starting TestFlight upload for #{brand_name}")
    
    # Ensure required environment variables
    ensure_env_vars([
      "APPLE_ID",
      "APPLE_TEAM_ID"
    ])

    # CLI authentication will prompt for Apple ID password and 2FA when needed
    # No API key setup required

    # Build the app using EAS
    build_with_eas(brand: brand, platform: "ios")

    # Download the latest build
    ipa_path = download_latest_eas_build(brand: brand, platform: "ios")

    # Upload to TestFlight with retry logic
    retry_count = 0
    max_retries = 3
    
    begin
      upload_to_testflight(
        ipa: ipa_path,
        app_identifier: bundle_id,
        skip_waiting_for_build_processing: false,
        skip_submission: true,
        distribute_external: false,
        notify_external_testers: false,
        changelog: "Latest build from EAS for #{brand_name}",
        beta_app_feedback_email: ENV["BETA_FEEDBACK_EMAIL"],
        beta_app_description: "#{brand_name} beta version for internal testing"
      )
      
      UI.success("âœ… Successfully uploaded #{brand_name} to TestFlight!")
      
    rescue => exception
      retry_count += 1
      if retry_count <= max_retries
        UI.important("âš ï¸  Upload failed (attempt #{retry_count}/#{max_retries}): #{exception.message}")
        UI.important("Retrying in 30 seconds...")
        sleep(30)
        retry
      else
        UI.error("âŒ Failed to upload #{brand_name} to TestFlight after #{max_retries} attempts")
        raise exception
      end
    end

    # Clean up downloaded file
    File.delete(ipa_path) if File.exist?(ipa_path)
  end

  # Private lane for App Store upload
  private_lane :upload_to_appstore_for_brand do |options|
    brand = options[:brand] || options[0]
    brand_name = get_brand_name(brand)
    bundle_id = get_bundle_id(brand)
    
    UI.message("ðŸš€ Starting App Store upload for #{brand_name}")
    
    # Ensure required environment variables
    ensure_env_vars([
      "APPLE_ID",
      "APPLE_TEAM_ID"
    ])

    # CLI authentication will prompt for Apple ID password and 2FA when needed
    # No API key setup required

    # Build the app using EAS
    build_with_eas(brand: brand, platform: "ios")

    # Download the latest build
    ipa_path = download_latest_eas_build(brand: brand, platform: "ios")

    # Upload to App Store
    upload_to_app_store(
      ipa: ipa_path,
      app_identifier: bundle_id,
      skip_binary_upload: false,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      automatic_release: false,
      submit_for_review: false
    )

    UI.success("âœ… Successfully uploaded #{brand_name} to App Store!")

    # Clean up downloaded file
    File.delete(ipa_path) if File.exist?(ipa_path)
  end
end

