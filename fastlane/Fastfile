  lane :build_upload_nt_production do
    build_and_upload_android_locally(brand: "nt", track: "production")
  end

  # Private lane for local Android build and upload
  private_lane :build_and_upload_android_locally do |options|
    brand = options[:brand]
    track = options[:track] || "beta"
    brand_name = get_brand_name(brand)
    package_name = get_package_name(brand)
    
    UI.message("ðŸš€ Starting local Android build and Google Play upload for #{brand_name} (#{track} track)")
    
    # Check for Google Play authentication
    # if "fastlane/"+ENV["GOOGLE_PLAY_JSON_KEY_PATH"].nil? || "fastlane/"+ENV["GOOGLE_PLAY_JSON_KEY_PATH"].empty?
    #   UI.user_error!("âŒ Google Play Console requires a service account JSON key file.\n" +
    #                  "Please set GOOGLE_PLAY_JSON_KEY_PATH in your .env.fastlane file.\n" +
    #                  "See the authentication setup guide for instructions.")
    # end
    
    # unless File.exist?("fastlane/"+ENV["GOOGLE_PLAY_JSON_KEY_PATH"])
    #   UI.user_error!("âŒ Google Play JSON key file not found: #{"fastlane/"+ENV["GOOGLE_PLAY_JSON_KEY_PATH"]}\n" +
    #                  "Please ensure the file exists and the path is correct.")
    # end

    # Set brand for prebuild
    ENV["BRAND"] = brand
    
    # Run prebuild to configure for specific brand
    UI.message("ðŸ”§ Running prebuild for #{brand_name}...")
    sh("cd .. && node scripts/prebuild.js #{brand}")
    
    # Build the Android app bundle
    UI.message("ðŸ”¨ Building #{brand_name} AAB...")
    
    gradle(
      project_dir: "android",
      task: "bundleRelease",
      properties: {
        "MYAPP_RELEASE_STORE_FILE" => ENV["ANDROID_KEYSTORE_PATH"],
        "MYAPP_RELEASE_KEY_ALIAS" => ENV["ANDROID_KEY_ALIAS"],
        "MYAPP_RELEASE_STORE_PASSWORD" => ENV["ANDROID_KEYSTORE_PASSWORD"],
        # "MYAPP_RELEASE_KEY_PASSWORD" => ENV["ANDROID_KEY_PASSWORD"]
      }
    )
    
    # Upload to Google Play Store
    upload_to_play_store_local(
      brand: brand,
      track: track,
      package_name: package_name,
      brand_name: brand_name
    )
  end

  # Private lane for Google Play Store upload (local builds)
  private_lane :upload_to_play_store_local do |options|
    brand = options[:brand]
    track = options[:track]
    package_name = options[:package_name]
    brand_name = options[:brand_name]
    
    UI.message("ðŸ“¤ Uploading #{brand_name} to Google Play Store (#{track} track)...")
    
    retry_count = 0
    max_retries = 3
    
    begin
      upload_to_play_store(
        package_name: package_name,
        aab: "android/app/build/outputs/bundle/release/app-release_nt.aab",
        track: track,
        release_status: track == "production" ? "draft" : "completed",
        skip_upload_metadata: false,
        skip_upload_changelogs: false,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        json_key: "./fastlane/"+ENV["GOOGLE_PLAY_JSON_KEY_PATH"]
      )
      
      UI.success("âœ… Successfully uploaded #{brand_name} to Google Play Store (#{track} track)!")
      
    rescue => exception
      retry_count += 1
      if retry_count <= max_retries
        UI.important("âš ï¸  Upload failed (attempt #{retry_count}/#{max_retries}): #{exception.message}")
        UI.important("Retrying in 30 seconds...")
        sleep(30)
        retry
      else
        UI.error("âŒ Failed to upload #{brand_name} to Google Play Store after #{max_retries} attempts")
        raise exception
      end
    end
    
    # Clean up build file
    aab_path = "../android/app/build/outputs/bundle/release/app-release.aab"
    File.delete(aab_path) if File.exist?(aab_path)
  end


  # Private lane for Google Play Store upload
  private_lane :upload_to_play_store_for_brand do |options|
    brand = options[:brand] || options[0]
    track = options[:track] || options[1] || "beta"
    brand_name = get_brand_name(brand)
    package_name = get_package_name(brand)
    
    UI.message("ðŸš€ Starting Google Play Store upload for #{brand_name} (#{track} track)")
    
    # Check for Google Play authentication
    if ENV["GOOGLE_PLAY_JSON_KEY_PATH"].nil? || ENV["GOOGLE_PLAY_JSON_KEY_PATH"].empty?
      UI.user_error!("âŒ Google Play Console requires a service account JSON key file.\n" +
                     "Please set GOOGLE_PLAY_JSON_KEY_PATH in your .env.fastlane file.\n" +
                     "See the authentication setup guide for instructions.")
    end
    
    unless File.exist?(ENV["GOOGLE_PLAY_JSON_KEY_PATH"])
      UI.user_error!("âŒ Google Play JSON key file not found: #{ENV['GOOGLE_PLAY_JSON_KEY_PATH']}\n" +
                     "Please ensure the file exists and the path is correct.")
    end

    # Build the app using EAS
    build_with_eas(brand: brand, platform: "android")

    # Download the latest build
    aab_path = download_latest_eas_build(brand: brand, platform: "android")

    # Upload to Google Play Store with retry logic
    retry_count = 0
    max_retries = 3
    
    begin
      upload_to_play_store(
        package_name: package_name,
        aab: aab_path,
        track: track,
        release_status: track == "production" ? "draft" : "completed",
        skip_upload_metadata: false,
        skip_upload_changelogs: false,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        json_key: ENV["GOOGLE_PLAY_JSON_KEY_PATH"]
      )
      
      UI.success("âœ… Successfully uploaded #{brand_name} to Google Play Store (#{track} track)!")
      
    rescue => exception
      retry_count += 1
      if retry_count <= max_retries
        UI.important("âš ï¸  Upload failed (attempt #{retry_count}/#{max_retries}): #{exception.message}")
        UI.important("Retrying in 30 seconds...")
        sleep(30)
        retry
      else
        UI.error("âŒ Failed to upload #{brand_name} to Google Play Store after #{max_retries} attempts")
        raise exception
      end
    end

    # Clean up downloaded file
    File.delete(aab_path) if File.exist?(aab_path)
  end
end

# Helper lanes
desc "Build app using EAS"
private_lane :build_with_eas do |options|
  brand = options[:brand]
  platform = options[:platform]
  brand_name = get_brand_name(brand)
  
  UI.message("ðŸ”¨ Building #{brand_name} for #{platform} using EAS...")
  
  # Set environment variable for brand
  ENV["BRAND"] = brand
  
  # Run EAS build
  profile = "production-#{brand}"
  sh("cd .. && eas build --platform #{platform} --profile #{profile} --non-interactive --wait")
  
  UI.success("âœ… EAS build completed for #{brand_name} (#{platform})")
end

desc "Download latest EAS build"
private_lane :download_latest_eas_build do |options|
  brand = options[:brand]
  platform = options[:platform]
  brand_name = get_brand_name(brand)
  
  UI.message("â¬‡ï¸  Downloading latest #{brand_name} build for #{platform}...")
  
  # Get the latest build URL from EAS
  profile = "production-#{brand}"
  build_info = sh("cd .. && eas build:list --platform #{platform} --profile #{profile} --limit 1 --json --non-interactive")
  build_data = JSON.parse(build_info)
  
  if build_data.empty?
    UI.user_error!("No builds found for #{brand_name} (#{platform})")
  end
  
  latest_build = build_data.first
  download_url = latest_build["artifacts"]["buildUrl"]
  
  if download_url.nil? || download_url.empty?
    UI.user_error!("No download URL found for latest #{brand_name} build")
  end
  
  # Download the build
  file_extension = platform == "ios" ? "ipa" : "aab"
  local_path = "./#{brand}_#{platform}_build.#{file_extension}"
  
  sh("curl -L -o '#{local_path}' '#{download_url}'")
  
  UI.success("âœ… Downloaded #{brand_name} build to #{local_path}")
  
  local_path
end

