  end

  desc "Build and upload Nursing Times locally to Google Play (Beta)"
  lane :build_upload_nt_beta do
    build_and_upload_android_locally(brand: "nt", track: "beta")
  end

  desc "Build and upload Construction News locally to Google Play (Alpha)"
  lane :build_upload_cn_alpha do
    build_and_upload_android_locally(brand: "cn", track: "alpha")
  end

  desc "Build and upload Nursing Times locally to Google Play (Alpha)"
  lane :build_upload_nt_alpha do
    build_and_upload_android_locally(brand: "nt", track: "alpha")
  end

  desc "Build and upload Construction News locally to Google Play (Internal)"
  lane :build_upload_cn_internal do
    build_and_upload_android_locally(brand: "cn", track: "internal")
  end

  desc "Build and upload Nursing Times locally to Google Play (Internal)"
  lane :build_upload_nt_internal do
    build_and_upload_android_locally(brand: "nt", track: "internal")
  end

  desc "Build and upload Construction News locally to Google Play (Production)"
