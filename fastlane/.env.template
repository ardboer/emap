# Fastlane Environment Variables Template
# Copy this file to .env.fastlane and fill in your actual values
# DO NOT commit .env.fastlane to version control - add it to .gitignore

# =============================================================================
# APPLE / iOS CONFIGURATION
# =============================================================================

# Apple ID (your Apple Developer account email)
APPLE_ID=your-apple-id@example.com

# Apple Developer Team ID (found in Apple Developer Portal)
APPLE_TEAM_ID=YOUR_TEAM_ID

# CLI Authentication - No API keys needed!
# Fastlane will prompt for your Apple ID password and 2FA when needed

# Beta app feedback email (for TestFlight)
BETA_FEEDBACK_EMAIL=beta-feedback@metropolis.co.uk

# =============================================================================
# GOOGLE PLAY / ANDROID CONFIGURATION (REQUIRED FOR ANDROID DEPLOYMENT)
# =============================================================================

# Google Play Console Service Account JSON Key Path
# Unfortunately, Google Play Console requires a service account JSON key file
# There's no CLI authentication option like Apple provides
# Generate this in Google Play Console > Setup > API access
# Leave empty if you only want to deploy to iOS
GOOGLE_PLAY_JSON_KEY_PATH=./fastlane/google-play-service-account.json

# =============================================================================
# APP STORE REVIEW INFORMATION
# =============================================================================

# Contact information for App Store review team
APP_REVIEW_FIRST_NAME=John
APP_REVIEW_LAST_NAME=Doe
APP_REVIEW_PHONE=+44 20 1234 5678
APP_REVIEW_EMAIL=app-review@metropolis.co.uk

# Demo account for App Store reviewers (if your app requires login)
APP_REVIEW_DEMO_USER=demo@example.com
APP_REVIEW_DEMO_PASSWORD=demo123

# =============================================================================
# SLACK NOTIFICATIONS (OPTIONAL)
# =============================================================================

# Slack webhook URL for deployment notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Slack channel for notifications
SLACK_CHANNEL=#deployments

# =============================================================================
# BRAND CONFIGURATION
# =============================================================================

# Current brand being deployed (cn or nt)
# This is usually set dynamically by deployment scripts
BRAND=cn

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================

# Skip waiting for build processing in TestFlight (speeds up deployment)
SKIP_WAITING_FOR_BUILD_PROCESSING=false

# Automatically distribute to external testers in TestFlight
DISTRIBUTE_EXTERNAL=false

# Notify external testers when new build is available
NOTIFY_EXTERNAL_TESTERS=false

# Automatically release to App Store after approval
AUTOMATIC_RELEASE=false

# Enable phased release for App Store
PHASED_RELEASE=true