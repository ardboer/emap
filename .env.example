# Brand Configuration
# Set the active brand shortcode (2-6 lowercase alphanumeric characters)
EXPO_PUBLIC_BRAND=nt

# Available brands:
# nt = Nursing Times
# cn = Construction News
# Add more brands here as they are created

# Brand Details (will be overridden by brand-specific .env files)
EXPO_PUBLIC_BRAND_NAME=Brand Name
EXPO_PUBLIC_BRAND_DISPLAY_NAME=Brand Display Name
EXPO_PUBLIC_BRAND_DOMAIN=https://example.com

# API Configuration (brand-specific)
EXPO_PUBLIC_API_BASE_URL=https://api.example.com
EXPO_PUBLIC_API_HASH=your-api-hash
EXPO_PUBLIC_API_MENU_ID=123456

# Theme Colors - Light Mode (brand-specific)
EXPO_PUBLIC_PRIMARY_COLOR_LIGHT=#007bff
EXPO_PUBLIC_BACKGROUND_COLOR_LIGHT=#fff
EXPO_PUBLIC_TEXT_COLOR_LIGHT=#11181C
EXPO_PUBLIC_ICON_COLOR_LIGHT=#687076
EXPO_PUBLIC_TAB_ICON_DEFAULT_LIGHT=#687076
EXPO_PUBLIC_TAB_ICON_SELECTED_LIGHT=#007bff
EXPO_PUBLIC_TAB_BAR_BACKGROUND_LIGHT=#fff
EXPO_PUBLIC_PROGRESS_INDICATOR_LIGHT=#007bff

# Theme Colors - Dark Mode (brand-specific)
EXPO_PUBLIC_PRIMARY_COLOR_DARK=#007bff
EXPO_PUBLIC_BACKGROUND_COLOR_DARK=#151718
EXPO_PUBLIC_TEXT_COLOR_DARK=#ECEDEE
EXPO_PUBLIC_ICON_COLOR_DARK=#9BA1A6
EXPO_PUBLIC_TAB_ICON_DEFAULT_DARK=#9BA1A6
EXPO_PUBLIC_TAB_ICON_SELECTED_DARK=#007bff
EXPO_PUBLIC_TAB_BAR_BACKGROUND_DARK=#151718
EXPO_PUBLIC_PROGRESS_INDICATOR_DARK=#007bff

# Feature Flags (brand-specific)
EXPO_PUBLIC_ENABLE_PODCASTS=false
EXPO_PUBLIC_ENABLE_PAPER=false
EXPO_PUBLIC_ENABLE_CLINICAL=false
EXPO_PUBLIC_ENABLE_EVENTS=true
EXPO_PUBLIC_ENABLE_ASK=true

# Test Configuration
EXPO_PUBLIC_TEST_ARTICLE_ID=123456

# App Store Configuration (brand-specific)
EXPO_PUBLIC_BUNDLE_ID=com.emap.brand
EXPO_PUBLIC_APP_STORE_ID=
EXPO_PUBLIC_GOOGLE_PLAY_ID=

# Build Configuration
# These are used during the EAS build process
# EAS_BUILD_PROFILE=production-nt
# EAS_BUILD_PLATFORM=all
